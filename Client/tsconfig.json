{
  "compilerOptions": {
    "target": "es6",                          
    "module": "es2015",                     
    "lib": [
      "dom",
      "es2017",
      "dom.iterable",
      "scripthost"
    ],                             
    "sourceMap": true,                     
    "outDir": "./dist",                        
    "rootDir": "./src",                      
    "removeComments": true,               
    "noEmitOnError": true,

    "strict": true,
    "strictPropertyInitialization": false,               
    "noUnusedLocals": true,                
    "noUnusedParameters": true,            
    "noImplicitReturns": true,             
    "esModuleInterop": true,                   
    "experimentalDecorators": true,
    }
}